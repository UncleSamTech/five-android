<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:id="@android:id/background">
		<shape>
			<corners android:radius="7dip" />
<!--
			<solid android:color="#ffcccccc" />
 -->
			<gradient
				android:startColor="#ffadadae"
				android:centerColor="#ff7a7a7d"
				android:centerY="0.75"
				android:endColor="#ff949496"
				android:angle="270"
			/>
		</shape>
	</item>

	<item android:id="@android:id/secondaryProgress">
		<clip>
			<shape>
				<corners android:radius="7dip" />
				<solid android:color="#901b57a4" />
			</shape>
		</clip>
	</item>

	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<corners android:radius="7dip" />
<!--
				<solid android:color="#ff4186be" />
 -->
<!--
				<gradient
					android:startColor="#ff8196d3"
					android:centerColor="#ff4186be"
					android:centerY="0.75"
					android:endColor="#ff6193cb"
					android:angle="270"
					/>
 -->
				<gradient
					android:startColor="#ff9fa6e0"
					android:centerColor="#ff4166bf"
					android:centerY="0.75"
					android:endColor="#ff6070cb"
					android:angle="270"
					/>
			</shape>
		</clip>
	</item>

</layer-list>

